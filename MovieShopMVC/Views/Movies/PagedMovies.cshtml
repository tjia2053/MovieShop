@model ApplicationCore.Models.PagedResultSetModel<ApplicationCore.Models.MovieCardModel>

<div class="rounded">
    <div class="container bg-light">
        <div class="row">
            @foreach (var movie in Model.PagedData)
            {
                <div class="col-xl-2 col-lg-3 col-sm-4 col-6">
                    <partial name="_MovieCard" model="movie">
                </div>
            }
        </div>
    </div>
</div>

@{
    var previousDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a class="btn btn-primary @previousDisabled" asp-action="Genres" asp-controller="Movies" asp-route-pageNumber="@(Model.PageNumber - 1)">
    Prev
</a>
<a class="btn btn-primary @nextDisabled" asp-action="Genres" asp-controller="Movies" asp-route-pageNumber="@(Model.PageNumber + 1)">
    Next
</a>
